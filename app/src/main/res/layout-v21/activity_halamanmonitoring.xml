<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141d26"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_below="@id/progressBarTemp"
            android:id="@+id/graph" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="190dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/circleshape2"
            android:indeterminate="false"
            android:max="99"
            android:progress="5"
            android:progressDrawable="@drawable/progwater" />

        <TextView
            android:id="@+id/tvWater3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignStart="@id/progressBar"
            android:layout_marginStart="50dp"
            android:layout_alignTop="@id/progressBar"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/orbitron"
            android:text="99"
            android:textColor="#ccc"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignStart="@id/tvWater3"
            android:layout_marginStart="34dp"
            android:layout_alignTop="@id/progressBar"
            android:fontFamily="@font/orbitron"
            android:layout_marginTop="45dp"
            android:text="%"
            android:textColor="#CCC"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvwt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/progressBar"
            android:layout_alignTop="@id/progressBar"
            android:layout_marginStart="150dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/orbitron"
            android:text="WATER LEVEL"
            android:textColor="#CCC"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvstatwt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/progressBar"
            android:layout_marginStart="150dp"
            android:layout_alignTop="@id/progressBar"
            android:fontFamily="@font/orbitron"
            android:layout_marginTop="80dp"
            android:text="Status :"
            android:textColor="#CCC"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/mapView"
            android:layout_marginTop="45dp"
            android:layout_alignEnd="@id/progressBar"
            android:layout_marginEnd="40dp"
            android:background="@drawable/ic_waterrrrr"/>



        <ProgressBar
            android:id="@+id/progressBarFuel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/tvwt"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circleshape2"
            android:indeterminate="false"
            android:max="99"
            android:progress="5"
            android:progressDrawable="@drawable/progfuel" />

        <TextView
            android:id="@+id/tvFuel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignStart="@id/progressBarFuel"
            android:layout_marginStart="50dp"
            android:layout_alignTop="@id/progressBarFuel"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/orbitron"
            android:text="99"
            android:textColor="#CCC"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvfl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_alignTop="@id/progressBarFuel"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/orbitron"
            android:text="FUEL LEVEL"
            android:textColor="#CCC"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvflstat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_alignTop="@id/progressBarFuel"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/orbitron"
            android:text="Status :"
            android:textColor="#CCC"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignStart="@id/tvFuel3"
            android:layout_marginStart="33dp"
            android:fontFamily="@font/orbitron"
            android:text="%"
            android:layout_alignTop="@id/progressBarFuel"
            android:layout_marginTop="45dp"
            android:textColor="#CCC"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/tvstatwt"
            android:layout_marginTop="35dp"
            android:layout_alignEnd="@id/progressBarFuel"
            android:layout_marginEnd="40dp"
            android:background="@drawable/ic_fuel"/>


        <ProgressBar
            android:id="@+id/progressBarPress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/tvfl"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/circleshape2"
            android:indeterminate="false"
            android:max="99"
            android:progress="5"
            android:progressDrawable="@drawable/progpress" />

        <TextView
            android:id="@+id/tvprss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/progressBarPress"
            android:layout_marginStart="150dp"
            android:layout_alignTop="@id/progressBarPress"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/orbitron"
            android:text="GENERATOR"
            android:textColor="#CCC"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvstatprss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/progressBarPress"
            android:layout_marginStart="150dp"
            android:layout_alignTop="@id/progressBarPress"
            android:fontFamily="@font/orbitron"
            android:layout_marginTop="80dp"
            android:text="Status :"
            android:textColor="#CCC"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvPress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/progressBarPress"
            android:layout_marginStart="50dp"
            android:layout_alignTop="@id/progressBarPress"
            android:fontFamily="@font/orbitron"
            android:layout_marginTop="45dp"
            android:text="99"
            android:textColor="#CCC"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignStart="@id/tvPress2"
            android:layout_marginStart="33dp"
            android:layout_alignTop="@id/progressBarPress"
            android:fontFamily="@font/orbitron"
            android:layout_marginTop="45dp"
            android:text="%"
            android:textColor="#CCC"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/tvflstat"
            android:layout_marginTop="35dp"
            android:layout_alignStart="@id/progressBarPress"
            android:layout_marginStart="40dp"
            android:background="@drawable/ic_generator"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/tvstatprss"
            android:layout_marginTop="63dp"
            android:layout_alignEnd="@id/progressBarTemp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/temp"/>



        <ProgressBar
            android:id="@+id/progressBarTemp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/tvprss"
            android:layout_marginTop="20dp"
            android:background="@drawable/circleshape2"
            android:layout_alignParentEnd="true"
            android:indeterminate="false"
            android:max="20"
            android:min="-20"
            android:progress="5"
            android:progressDrawable="@drawable/prog" />

        <TextView
            android:id="@+id/tvtemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_alignTop="@id/progressBarTemp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/orbitron"
            android:text="TEMPERATURE"
            android:textColor="#CCC"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvtempstat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_alignTop="@id/progressBarTemp"
            android:fontFamily="@font/orbitron"
            android:layout_marginTop="80dp"
            android:text="Status :"
            android:textColor="#CCCCCC"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvTemp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignStart="@id/progressBarTemp"
            android:layout_marginStart="50dp"
            android:layout_alignTop="@id/progressBarTemp"
            android:fontFamily="@font/orbitron"
            android:layout_marginTop="45dp"
            android:text="20"
            android:textColor="#CCC"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignStart="@id/tvTemp3"
            android:layout_marginStart="32dp"
            android:layout_alignTop="@id/progressBarTemp"
            android:fontFamily="@font/orbitron"
            android:layout_marginTop="45dp"
            android:text="Â°C"
            android:textColor="#CCC"
            android:textSize="20dp" />



        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            mapbox:mapbox_cameraBearing="-10"
            mapbox:mapbox_cameraTargetLat="-6.937586"
            mapbox:mapbox_cameraTargetLng="107.759331"
            mapbox:mapbox_cameraTilt="50.25"
            mapbox:mapbox_cameraZoom="13"
            mapbox:mapbox_cameraZoomMax="18"
            mapbox:mapbox_cameraZoomMin="1">


        </com.mapbox.mapboxsdk.maps.MapView>
    </RelativeLayout>

</ScrollView>